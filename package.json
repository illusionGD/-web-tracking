{
    "name": "web-tracking",
    "version": "1.0.0",
    "description": "网页埋点工具",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.config.js",
        "commit": "git add . && git-cz",
        "push": "npm run commit && git push",
        "lint": "eslint",
        "lint:fix": "eslint \"**/*.{ts,tsx,js}\" --fix",
        "husky:prepare": "husky install",
        "publish": "npx lerna publish --force-publish",
        "publish:major": "npx lerna publish major --force-publish",
        "publish:minor": "npx lerna publish minor --force-publish",
        "publish:patch": "npx lerna publish patch --force-publish",
        "publish:pre": "npx lerna publish --pre-dist-tag prerelease",
        "list": "npx lerna list",
        "changed": "npx lerna changed"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@eslint/js": "^9.11.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.6",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.11.0",
        "eslint-define-config": "^2.1.0",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "lerna": "^7.4.2",
        "lint-staged": "^15.2.10",
        "prettier": "3.3.3",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.6.0"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:fix"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "defaultScope": "global"
        }
    }
}