{
    "name": "web-tracking",
    "version": "1.0.0",
    "description": "网页埋点工具",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "commit": "git add . && git-cz && git push --follow-tags",
        "lint": "eslint",
        "lint:fix": "eslint \"**/*.{ts,tsx,js}\" --fix",
        "husky:prepare": "husky install",
        "version:conventional-graduate": "npx lerna version --force-conventional-graduate",
        "version:major": "npx lerna version major",
        "version:minor": "npx lerna version minor",
        "version:patch": "npx lerna version patch",
        "version:prerelease": "npx lerna version prerelease",
        "version:premajor": "npx lerna version premajor",
        "version:preminor": "npx lerna version preminor",
        "version:prepatch": "npx lerna version prepatch",
        "list": "npx lerna list",
        "changed": "npx lerna changed"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.11.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.11.0",
        "eslint-define-config": "^2.1.0",
        "globals": "^15.9.0",
        "husky": "^9.1.6",
        "lerna": "^7.4.2",
        "lint-staged": "^15.2.10",
        "prettier": "3.3.3",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.6.0"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "defaultScope": "global"
        }
    }
}