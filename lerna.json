{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.6-alpha.0",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": ["master", "release/*"]
    },
    "publish": {
      "ignoreChanges": ["src", "node_modules"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "pnpm"
}
